let mapleader = ","
" Map 'jk' to escape in insert mode
inoremap jk <Esc>

" Yank to system clipboard
nnoremap <leader>y "*y
vnoremap <leader>y "*y

" Delete to system clipboard
nnoremap <leader>d "*d
vnoremap <leader>d "*d

" Paste from system clipboard
nnoremap <leader>p "*p
vnoremap <leader>p "*p

" Window navigation
nnoremap <c-h> <c-w>h
nnoremap <c-k> <c-w>k
nnoremap <c-j> <c-w>j
nnoremap <c-l> <c-w>l
